import { Theme } from "../styles.slint";

export component MenuButton inherits Rectangle {
    in-out property <string> text;
    callback clicked;

    border-radius: 4px;
    // Minimalist look: No borders, subtle background change on hover/press
    background: touch.pressed ? @linear-gradient(180deg, #e9ecef 0%, #dee2e6 100%) : (touch.has-hover ? #f8f9fa : transparent);
    
    // Animation for hover effect
    animate background { duration: 150ms; }

    HorizontalLayout {
        padding-left: 8px;
        padding-right: 8px;
        Text {
            text: root.text;
            color: Theme.text-primary;
            font-size: 13px;
            font-weight: 400; // Slightly lighter weight for menu items
            horizontal-alignment: left;
            vertical-alignment: center;
        }
    }

    touch := TouchArea {
        clicked => {
            root.clicked();
        }
    }
}
